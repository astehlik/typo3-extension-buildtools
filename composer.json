{
	"name": "de-swebhosting/typo3-extension-buildtools",
	"description": "Contains scripts to test and release TYPO3 Extensions",
	"license": "GPL-3.0-or-later",
	"type": "library",
	"require": {
		"php": "^8.2",
		"bnf/phpstan-psr-container": "^1.0.1",
		"codeception/codeception": "^5.1.2",
		"codeception/module-asserts": "^3.0.0",
		"codeception/module-webdriver": "^4.0.2",
		"de-swebhosting/php-codestyle": "^5.1.2",
		"ergebnis/composer-normalize": "^2.42",
		"friendsofphp/php-cs-fixer": "^3.64.0",
		"friendsoftypo3/phpstan-typo3": "^0.9.0",
		"michielroos/typo3scan": "^1.7",
		"phpstan/phpstan": "^1.12.6",
		"phpstan/phpstan-phpunit": "^1.4.0",
		"phpunit/phpunit": "^11.3.1",
		"squizlabs/php_codesniffer": "^3.9",
		"symfony/dom-crawler": "^6.3",
		"typo3/cms-backend": "^13.4",
		"typo3/cms-core": "^13.4",
		"typo3/cms-extbase": "^13.4",
		"typo3/cms-filelist": "^13.4",
		"typo3/cms-fluid": "^13.4",
		"typo3/cms-frontend": "^13.4",
		"typo3/cms-install": "^13.4",
		"typo3/testing-framework": "^9.0.0"
	},
	"require-dev": {
		"composer/composer": "^2.5"
	},
	"suggest": {
		"de-swebhosting/php-codestyle": "Required to run t3_check_codestyle.sh",
		"squizlabs/php_codesniffer": "Required to run t3_check_codestyle.sh"
	},
	"autoload": {
		"psr-4": {
			"De\\SWebhosting\\Buildtools\\": "src/"
		}
	},
	"bin": [
		"bin/t3_check_codestyle.sh",
		"bin/t3_deploy_to_ter.sh",
		"bin/t3_prepare_release.sh",
		"bin/t3_run_tests.sh"
	],
	"config": {
		"allow-plugins": {
			"ergebnis/composer-normalize": true,
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		}
	}
}
