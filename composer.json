{
	"name": "de-swebhosting/typo3-extension-buildtools",
	"type": "library",
	"description": "Contains scripts to test and release TYPO3 Extensions",
	"license": "GPL-3.0-or-later",
	"bin": [
		"bin/t3_check_codestyle.sh",
		"bin/t3_deploy_to_ter.sh",
		"bin/t3_prepare_release.sh",
		"bin/t3_run_tests.sh"
	],
	"require": {
		"squizlabs/php_codesniffer": "^3.1",
		"codeception/module-asserts": "^1.1",
		"codeception/module-webdriver": "^1.0.1",
		"codeception/codeception": "^4.0",
		"typo3/testing-framework": "~6.2.3"
	},
	"suggest": {
		"de-swebhosting/php-codestyle": "Currently required to run t3_check_codestyle.sh"
	},
	"autoload": {
		"psr-4": {
			"De\\SWebhosting\\Buildtools\\": "src/"
		}
	},
	"extra": {
		"typo3/class-alias-loader": {
			"class-alias-maps": [
				"legacy/ClassAliasMap.php"
			]
		}
	}
}
